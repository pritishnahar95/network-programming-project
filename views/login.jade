extends layout

block content
    h3 Login
    form(class='form-horizontal',role='form')
    
        div(class='form-group')
            label(class='control-label col-sm-2',for='username') Username:
            div(class='col-sm-10')
                input(class='form-control', type='text',id='username')

        div(class='form-group')
            label(class='control-label col-sm-2',for='password') Password:
            div(class='col-sm-10')
                input(class='form-control', type='password',id='password')                
        
        div(class='form-group')
            h4(class='span7 text-center') Don't have an account? 
                a(href="/register") Register
       
        div(class='form-group')
            div(class="span7 text-center")
                button(type="submit" class="btn btn-success") Login  
                