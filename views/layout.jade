doctype html
html(ng-app="ProShareApp")
  head
    title= "ProShare" + title
    link(rel='stylesheet', type="text/css", href='/stylesheets/style.css')
    link(rel='stylesheet', type="text/css", href='/stylesheets/vendors/bootstrap.min.css')
    link(rel='stylesheet', href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css")
    script(type="text/javascript", src="/javascripts/vendors/jquery.min.js")
    script(type="text/javascript", src="/javascripts/vendors/bootstrap.min.js")
    script(type="text/javascript", src='/javascripts/vendors/angular.min.js')
    script(type="text/javascript", src='/javascripts/vendors/angular-animate.min.js')
    script(type="text/javascript", src='/javascripts/vendors/angular-route.min.js')
    script(type="text/javascript", src='/javascripts/vendors/angular-local-storage.min.js')
    script(type="text/javascript", src='/javascripts/ProShareApp.js')
  body
    header.navbar.navbar-default.navbar-fixed-top(ng-controller="IndexCtrl")
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
          ul.nav.navbar-nav.navbar-left
            li
              a(href='/') ProShare
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/about') About Us
            li(ng-show="!loggedin")
              a(href='/login') Login
            li(ng-show="!loggedin")
              a(href='/register') Register
            li(ng-show="loggedin")
              a(class="btn" href='/users/dashboard') My Dashboard
            li(ng-show="loggedin")
              a(class="btn" ng-click="logout()") Logout
            li
              a(href='/projects') Projects
    
    
    div(class="container")
      block content
    
    footer(class="footer navbar-fixed-bottom")
      div(class="container")
        div(class="text-muted left") Made with 
          i(class="red fa fa-heart")
        div(class="text-muted right") Contribute &nbsp      
          a(href="https://github.com/umangty/network-programming-project" target="_blank")
            img(src='/images/GitHub.png')
