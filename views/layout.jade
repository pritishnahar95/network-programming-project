doctype html
html(ng-app="ProShareApp")
  head
    title= "ProShare" + title
    link(rel='stylesheet', type="text/css", href='/stylesheets/style.css')
    link(rel='stylesheet', type="text/css", href='/stylesheets/vendors/bootstrap.min.css')
    script(type="text/javascript", src='/javascripts/vendors/angular.min.js')
    script(type="text/javascript", src='/javascripts/vendors/angular-animate.min.js')
    script(type="text/javascript", src='/javascripts/vendors/angular-route.min.js')
    script(type="text/javascript", src='/javascripts/vendors/angular-local-storage.min.js')
    script(type="text/javascript", src='/javascripts/ProShareApp.js')
  body
    header.navbar.navbar-default.navbar-fixed-top(ng-controller="IndexCtrl")
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-left
            li
              a(href='/') ProShare
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/about') About Us
            li(ng-show="!loggedin")
              a(href='/login') Login
            li(ng-show="!loggedin")
              a(href='/register') Register
            li(ng-show="loggedin")
              a(href="/dashboard") My dashboard
            li(ng-show="loggedin")
              a(ng-click="logout()") Logout
            li
              a(href='/projects') Projects
    
    
    div(class="container")
      block content
    
    footer(class="footer navbar-fixed-bottom")
      div(class="container")
        p(class="text-muted") Made with LOVE.
