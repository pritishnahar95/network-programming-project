extends layout

block content
    h3 Register
    form(class='form-horizontal',role='form')
    
        div(class='form-group')
            label(class='control-label col-sm-2',for='username') Username:
            div(class='col-sm-10')
                input(class='form-control', type='text',id='username')
                
        div(class='form-group')
            label(class='control-label col-sm-2',for='firstname') First Name:
            div(class='col-sm-10')
                input(class='form-control', type='text',id='firstname')
                
        div(class='form-group')
            label(class='control-label col-sm-2',for='lastname') Last Name:
            div(class='col-sm-10')
                input(class='form-control', type='text',id='lastname')
                
        div(class='form-group')
            label(class='control-label col-sm-2',for='bitsid') BITS Id:
            div(class='col-sm-10')
                input(class='form-control', type='text',id='bitsid')
        
        div(class='form-group')
            label(class='control-label col-sm-2',for='branch') Branch:
            div(class='col-sm-10')
                input(class='form-control', type='text',id='branch')
                
        div(class='form-group')
            label(class='control-label col-sm-2',for='pasword') Password:
            div(class='col-sm-10')
                input(class='form-control', type='password',id='Password')
        
        div(class='form-group')
            h4(class='span7 text-center') Already have an account? 
                a(href="/login") Login
       
        div(class='form-group')
            div(class="span7 text-center")
                button(type="submit" class="btn btn-success") Register  
                
             